class Key begin
    dcl bool isPressed
    dcl bool isDown
end

class Sprite begin
    dcl num posX
    dcl num posY
    dcl num sizeX
    dcl num sizeY
    dcl text id

    OnConstruct(num xx, num yy, num sizeXX, num sizeYY, text ID) do
        set posX to xx
        set posY to yy
        set sizeX to sizeXX
        set sizeY to sizeYY
        set id to ID
    end

    dcl func update() begin

    end

    dcl func collision(Sprite other) begin

    end
end

