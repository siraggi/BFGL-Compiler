        for(Sprite s : Global.game.Sprites) {
            for(Sprite other : Global.game.Sprites){
                if(!s.equals(other) && (new Rectangle(s.posX, s.posY, s.sizeX, s.sizeY)).intersects(new Rectangle(other.posX, other.posY, other.sizeX, other.sizeY))){
                    s.collision(other);
                }
            }

            s.update();
        }
    }

    public void render(GameContainer gc, Graphics g) throws SlickException {
        for(Sprite s : Global.game.Sprites) {
            g.draw(new Rectangle(s.posX, s.posY, s.sizeX, s.sizeY));
        }
        g.drawString(Integer.toString(Global.game.Sprites.size()), 100, 100);
    }



